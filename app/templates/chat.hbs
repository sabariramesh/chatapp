	<div class="row justify-content-md-center">
		<div class="col-4">
			<div class="row border-top" id="forward">
				<div class="row" class="proclass">
					<div class="col" style="font-size:16px;font-weight:bold;padding:10px;">Forward to...<span onclick={{action 'removeForward'}} class="remove">X</span></div>
				</div>
				
				<div class="row">
					<div class="col">
						<ul>	
						{{#each forwardusers as |usrs|}}
							<li><a onclick={{action 'addforward' usrs}}>{{usrs}}</a></li>
						{{/each}}
						</ul>
					</div>
				</div>
				
				<div class="row">
					<div class="col">
							<button class="btn btn-success" id="frd-btn" onclick={{action 'sendForward'}}>Forward</button>
					</div>
				</div>
				
				<div class="row">
					<div class="col">
						<p id="recipients">Recipients:</p>
						<ul>	
						{{#each selectedforwardusers as |frwdusers|}}
							<p id="selectedusers">{{frwdusers}};</p>
						{{/each}}
						</ul>
					</div>
				</div>
			</div>
			
			<div class="row border-top" id="broadcast">
				<div class="row" class="proclass">
					<div class="col" style="font-size:16px;font-weight:bold;padding:10px;">BROADCAST<span onclick={{action 'removeBroadcast'}} class="remove">X</span></div>
				</div>
				
				<div class="row">
					<div class="col">
						<ul>	
						{{#each broadcastusers as |users|}}
							<li><a onclick={{action 'addUsersBroad' users}}>{{users}}</a></li>
						{{/each}}
						</ul>
					</div>
				</div>
				
				<div class="row" id="broadsend">
					<div class="col"><input type="text" id="broadcastmsg" onKeyup={{action "broadcast"}}/>
						<label for="file-broad-upload" ><img src="images/img_sharing.png" height="16" width="18"></label>
						<input id="file-broad-upload" multiple="true" onchange={{action "loadBroadImage"}} accept="image/*" type="file"/>
						<label for="video-broad-upload"><img src="images/upload_video.png" height="16" width="18"></label>
						<input id="video-broad-upload" multiple="true" onchange={{action "uploadBroadVideoFile"}} accept="video/*" type="file"/>
					</div>
				</div>
				
				<div class="row" id="pre-broad">
					<div class="col">
						<img id="broad-preview" src="" width="180" height="100">
						<input id="broad-preview-input" type="text"  autocomplete="off" placeholder="Add Caption"/>
