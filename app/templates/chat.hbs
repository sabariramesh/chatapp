<link rel="stylesheet" href="css/bootstrap.min.css">
<div class='container-fluid'>
	{{notification-container position="top-right"}}
	<div class="row border-bottom">
		<div class="col-4"><p>USERNAME{{name11}}<span>{{name}}</span><></p></div>
		<div class="col-8"><a href="/chatlogout" id="top-button">Logout</a><a id="top-button" onclick{{action 'loadUserProfile'}}>Edit Profile</a><a id="top-button" onclick{{action 'loadSearch' 1}}>Search</a><a id="top-button" onclick={{action 'loadBroadCast'}}>BroadCast</a><a id="top-button">{{#link-to "userchart"}}Messages{{/link-to}}</a><a id="top-button">{{#link-to "graphgen"}}Graph{{/link-to}}</a></div>   
